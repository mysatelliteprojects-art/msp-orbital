  { name: "Reddit", url: "https://www.reddit.com/r/MSP_Orbital/", color: "#FF4500", subtitle: "社群討論" },
  { name: "Quora", url: "https://msporbital.quora.com/", color: "#B92B27", subtitle: "知識問答" },
  { name: "Medium", url: "https://medium.com/@MSP_Orbital", color: "#000000", subtitle: "深度文章" },
  { name: "Substack", url: "https://substack.com/@msporbital", color: "#FF6719", subtitle: "電子報訂閱" },
  { name: "Blogspot", url: "https://msp-orbital.blogspot.com/", color: "#F57D00", subtitle: "官方部落格" },
