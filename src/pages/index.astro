  { name: "Pinterest", url: "https://www.pinterest.com/msp_orbital/", color: "#E60023", subtitle: "視覺靈感" },
  { name: "Instagram", url: "https://www.instagram.com/msp_orbital/", color: "#E4405F", subtitle: "生活風格" },
];
---

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MSP Orbital - Official Links</title>
    <meta name="description" content="MSP Orbital 官方連結入口 - 極速瀏覽，無外部追蹤。" />
    
    <style>
        :root {
            --bg-color: #0f172a; /* 深邃宇宙藍 */
            --text-color: #f8fafc;
            --accent-color: #38bdf8; /* 軌道藍 */
            --card-bg: rgba(30, 41, 59, 0.7);
            --card-hover: rgba(56, 189, 248, 0.15);
        }

        /* 系統字體堆疊：速度最快，不需要下載 */
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
            background-color: var(--bg-color);
            color: var(--text-color);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow-x: hidden;
        }

        /* 背景星空效果 (純 CSS 繪製，不下載圖片) */
        .background-stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background-image: 
                radial-gradient(2px 2px at 20px 30px, #eee, rgba(0,0,0,0)),
                radial-gradient(2px 2px at 40px 70px, #fff, rgba(0,0,0,0)),
                radial-gradient(2px 2px at 50px 160px, #ddd, rgba(0,0,0,0)),
                radial-gradient(2px 2px at 90px 40px, #fff, rgba(0,0,0,0)),
                radial-gradient(2px 2px at 130px 80px, #fff, rgba(0,0,0,0));
            background-repeat: repeat;
            background-size: 200px 200px;
            opacity: 0.3;
            animation: drift 100s linear infinite;
        }

        @keyframes drift {
            from { background-position: 0 0; }
            to { background-position: 0 1000px; }
        }

        main {
            width: 100%;
            max-width: 600px;
            padding: 2rem 1rem;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* SVG Logo 容器與動畫 */
        .logo-container {
            width: 180px;
            height: 180px;
            margin-bottom: 2rem;
            position: relative;
        }
        
        /* 讓 Logo 有呼吸感 */
        .logo-svg {
            width: 100%;
            height: 100%;
            filter: drop-shadow(0 0 15px rgba(56, 189, 248, 0.5));
            animation: hoverFloat 6s ease-in-out infinite;
        }

        @keyframes hoverFloat {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        /* 軌道旋轉動畫 */
        .orbit-ring {
            transform-origin: center;
            animation: spin 20s linear infinite;
        }
        .orbit-ring-reverse {
            transform-origin: center;
            animation: spin 25s linear infinite reverse;
        }

        @keyframes spin {
            100% { transform: rotate(360deg); }
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 800;
            margin: 0 0 0.5rem 0;
            letter-spacing: -0.05em;
            background: linear-gradient(135deg, #fff 0%, #94a3b8 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        p.tagline {
            color: #94a3b8;
            margin-bottom: 3rem;
            font-size: 1.1rem;
            text-align: center;
        }

        /* 連結卡片區塊 */
        .links-grid {
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .link-card {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: var(--card-bg);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1.25rem 1.5rem;
            border-radius: 12px;
            text-decoration: none;
            color: white;
            transition: all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            backdrop-filter: blur(10px); /* 磨砂玻璃效果 */
            position: relative;
            overflow: hidden;
        }

        /* 懸停效果：亮光掃過 */
        .link-card::after {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: 0.5s;
        }

        .link-card:hover {
            transform: translateY(-2px) scale(1.01);
            background: var(--card-hover);
            border-color: var(--accent-color);
            box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
        }

        .link-card:hover::after {
            left: 100%;
        }

        .card-content {
            display: flex;
            flex-direction: column;
        }

        .link-name {
            font-weight: 700;
            font-size: 1.1rem;
        }

        .link-sub {
            font-size: 0.85rem;
            color: #94a3b8;
            margin-top: 4px;
        }

        .arrow-icon {
            opacity: 0.5;
            transition: transform 0.2s;
        }

        .link-card:hover .arrow-icon {
            opacity: 1;
            transform: translateX(5px);
            color: var(--accent-color);
        }

        /* 頁尾 */
        footer {
            margin-top: 4rem;
            padding-bottom: 2rem;
            color: #64748b;
            font-size: 0.8rem;
        }

        /* 針對小螢幕優化 */
        @media (max-width: 480px) {
            h1 { font-size: 2rem; }
            .logo-container { width: 150px; height: 150px; }
        }
    </style>
</head>
<body>
    <div class="background-stars"></div>

    <main>
        <div class="logo-container">
            <svg class="logo-svg" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <radialGradient id="planetGrad" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
                        <stop offset="0%" stop-color="#38bdf8" />
                        <stop offset="100%" stop-color="#0284c7" />
                    </radialGradient>
                    <filter id="glow">
                        <feGaussianBlur stdDeviation="2.5" result="coloredBlur"/>
                        <feMerge>
                            <feMergeNode in="coloredBlur"/>
                            <feMergeNode in="SourceGraphic"/>
                        </feMerge>
                    </filter>
                </defs>
                
                <g class="orbit-ring-reverse" style="opacity: 0.3;">
                    <ellipse cx="100" cy="100" rx="90" ry="30" fill="none" stroke="#fff" stroke-width="1" transform="rotate(45 100 100)" />
                    <circle cx="190" cy="100" r="3" fill="#fff" transform="rotate(45 100 100)" />
                </g>

                <g class="orbit-ring" style="opacity: 0.6;">
                    <ellipse cx="100" cy="100" rx="90" ry="30" fill="none" stroke="#38bdf8" stroke-width="2" transform="rotate(-45 100 100)" />
                    <circle cx="10" cy="100" r="5" fill="#38bdf8" transform="rotate(-45 100 100)" filter="url(#glow)" />
                </g>

                <circle cx="100" cy="100" r="25" fill="url(#planetGrad)" filter="url(#glow)" />
                
                <text x="100" y="155" text-anchor="middle" fill="#fff" font-size="14" font-weight="bold" letter-spacing="2" style="font-family: sans-serif; opacity: 0.8;">MSP</text>
            </svg>
        </div>

        <h1>MSP Orbital</h1>
        <p class="tagline">Explore the Universe of Information</p>

        <div class="links-grid">
            {links.map((link) => (
                <a href={link.url} target="_blank" rel="noopener noreferrer" class="link-card">
                    <div class="card-content">
                        <span class="link-name">{link.name}</span>
                        <span class="link-sub">{link.subtitle}</span>
                    </div>
                    <svg class="arrow-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </a>
            ))}
        </div>

        <footer>
            &copy; {new Date().getFullYear()} MSP Orbital. All Systems Nominal.
        </footer>
    </main>
</body>
</html>
